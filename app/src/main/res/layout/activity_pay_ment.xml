<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".payment.PayMentActivity">
    <data>
        <variable
            name="actionBar"
            type="String"/>
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
   >

    <include android:id="@+id/payment_action_bar"
        layout="@layout/custom_actionbar"
        android:textSize="36sp"
        android:fontFamily="@font/nskr_medium"
        bind:title="@{actionBar}"></include>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/payment_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        bind:layout_constraintBottom_toBottomOf="parent"
        bind:layout_constraintLeft_toLeftOf="parent"
        bind:layout_constraintRight_toRightOf="parent"
        bind:layout_constraintTop_toBottomOf="@+id/payment_action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/payment_left_line"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.06"></androidx.constraintlayout.widget.Guideline>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/payment_right_line"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.95"></androidx.constraintlayout.widget.Guideline>


                <TextView
                    android:id="@+id/payment_OrderText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/orderProductText"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/payment_left_line"
                    app:layout_constraintRight_toRightOf="@+id/payment_right_line"
                    bind:layout_constraintTop_toTopOf="parent"
                    bind:layout_constraintVertical_bias="0.05"
                   ></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/payment_ProductImgArea"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp"
                    app:layout_constraintWidth_percent="0.3"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintDimensionRatio="1:0.8"
                    bind:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="0.2"
                    bind:layout_constraintLeft_toLeftOf="@+id/payment_left_line"
                    bind:layout_constraintRight_toRightOf="@+id/payment_right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/payment_OrderText">

                    <ImageView
                        android:id="@+id/payment_ProductImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"

                        ></ImageView>

                </androidx.cardview.widget.CardView>


