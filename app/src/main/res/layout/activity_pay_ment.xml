                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/payment_ProductImgArea"
                    app:layout_constraintVertical_bias="0.0"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="@+id/payment_right_line"
                    bind:layout_constraintTop_toTopOf="@+id/payment_ProductImgArea"></TextView>


                <TextView
                    android:id="@+id/payment_productText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/nskr_medium"
