        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광주광역시 북구 동구 동계천로150,"
        android:lineHeight="23sp"
        android:textSize="14dp"
        android:fontFamily="@font/noto_sans_kr_regular"
