<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/action_bar"
            layout="@layout/custom_actionbar"
            bind:title="@{title}"></include>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:fillViewport="true"
            android:overScrollMode="never"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintHorizontal_bias="0.0"
            bind:layout_constraintLeft_toLeftOf="parent"
            bind:layout_constraintRight_toRightOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/action_bar"
            bind:layout_constraintVertical_bias="1.0">


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="0dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_line"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.05"></androidx.constraintlayout.widget.Guideline>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_line"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    bind:layout_constraintGuide_percent="0.95"></androidx.constraintlayout.widget.Guideline>


                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toTopOf="parent"
                    bind:layout_constraintVertical_bias="0.01"></TextView>

                <EditText
                    android:id="@+id/id_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="아이디"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="@+id/overlap_check_btn"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toLeftOf="@+id/overlap_check_btn"
                    bind:layout_constraintTop_toTopOf="@+id/overlap_check_btn"></EditText>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/overlap_check_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/stroke_round_corner_btn"
                    android:fontFamily="@font/nskr_medium"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:text="중복확인"
                    android:textColor="@color/app_basic_color"
                    android:textSize="13dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHeight_percent="0.03"
                    bind:layout_constraintHorizontal_bias="1"
                    bind:layout_constraintLeft_toRightOf="@+id/id_input_box"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/id_text"
                    bind:layout_constraintVertical_bias="0"></androidx.appcompat.widget.AppCompatButton>

                <TextView
                    android:id="@+id/check_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:text="이미 사용중인 아이디입니다."
                    android:textColor="@color/red_ce2929"
                    android:textSize="12dp"
                    android:visibility="invisible"
                    bind:layout_constraintBottom_toTopOf="@+id/name"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@id/id_input_box"
                    bind:layout_constraintVertical_bias="0.5"></TextView>


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/id_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>


                <EditText
                    android:id="@+id/name_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="비밀번호"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/name"
                    bind:layout_constraintVertical_bias="0"></EditText>

                <TextView
                    android:id="@+id/pw_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/name_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>

                <EditText
                    android:id="@+id/pw_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/pw_text"
                    bind:layout_constraintVertical_bias="0"></EditText>


                <TextView
                    android:id="@+id/pw_check_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/pw_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>

                <EditText
                    android:id="@+id/pw_check_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/pw_check_text"
                    bind:layout_constraintVertical_bias="0"></EditText>


                <TextView
                    android:id="@+id/phone_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연락처"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/pw_check_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>

                <EditText
                    android:id="@+id/phone_number_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="'-'구분없이 입력"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/phone_number_text"
                    bind:layout_constraintVertical_bias="0"></EditText>

                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/phone_number_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>

                <EditText
                    android:id="@+id/email_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="이메일을 입력해주세요"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/email_text"
                    bind:layout_constraintVertical_bias="0"></EditText>

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/email_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>

                <View
                    android:id="@+id/post_code_divider"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#d6d6d6"
                    bind:layout_constraintBottom_toBottomOf="@+id/post_code_input_box"
                    bind:layout_constraintHeight_percent="0.001"
                    bind:layout_constraintLeft_toRightOf="@+id/post_code_input_box"
                    bind:layout_constraintRight_toLeftOf="@id/post_code_input_box2"
                    bind:layout_constraintTop_toTopOf="@+id/post_code_input_box"
                    bind:layout_constraintWidth_percent="0.02"></View>

                <EditText
                    android:id="@+id/post_code_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="우편번호"
                    android:paddingRight="20dp"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toLeftOf="@+id/post_code_divider"
                    bind:layout_constraintTop_toBottomOf="@+id/address_text"
                    bind:layout_constraintVertical_bias="0"
                    bind:layout_constraintWidth_percent="0.2"></EditText>

                <EditText
                    android:id="@+id/post_code_input_box2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:paddingRight="20dp"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toRightOf="@+id/post_code_divider"
                    bind:layout_constraintTop_toBottomOf="@+id/address_text"
                    bind:layout_constraintVertical_bias="0"
                    bind:layout_constraintWidth_percent="0.2"></EditText>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/search_post_code_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/stroke_round_corner_btn"
                    android:fontFamily="@font/nskr_medium"
                    android:includeFontPadding="false"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="우편번호 검색"
                    android:textColor="@color/app_basic_color"
                    android:textSize="13dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHeight_percent="0.035"
                    bind:layout_constraintHorizontal_bias="1"
                    bind:layout_constraintLeft_toRightOf="@+id/post_code_input_box2"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/address_text"
                    bind:layout_constraintVertical_bias="0"></androidx.appcompat.widget.AppCompatButton>


                <EditText
                    android:id="@+id/address_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="#d6d6d6"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/post_code_input_box2"
                    bind:layout_constraintVertical_bias="0"></EditText>

                <EditText
                    android:id="@+id/address_detail_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:backgroundTint="#d6d6d6"
                    android:hint="상세주소"
                    android:textColor="#c9c9c9"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/address_input_box"
                    bind:layout_constraintVertical_bias="0"></EditText>


                <TextView
                    android:id="@+id/recommender_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천인 아이디"
                    android:textColor="@color/app_basic_color"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/address_detail_input_box"
                    bind:layout_constraintVertical_bias="0.03"></TextView>

                <EditText
                    android:id="@+id/recommender_code_input_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d6d6d6"
                    android:hint="추천인 코드 입력"
                    android:textColorHint="#c9c9c9"
                    android:textSize="12dp"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toLeftOf="@+id/recommender_code_check_btn"
                    bind:layout_constraintTop_toBottomOf="@+id/recommender_code_text"
                    bind:layout_constraintVertical_bias="0"></EditText>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/recommender_code_check_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/stroke_round_corner_btn"
                    android:fontFamily="@font/nskr_medium"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:text="확인"
                    android:textColor="@color/app_basic_color"
                    android:textSize="13dp"
                    bind:layout_constraintBottom_toBottomOf="@id/recommender_code_input_box"
                    bind:layout_constraintHeight_percent="0.04"
                    bind:layout_constraintHorizontal_bias="1"
                    bind:layout_constraintLeft_toRightOf="@+id/recommender_code_input_box"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toTopOf="@+id/recommender_code_input_box"
                    bind:layout_constraintVertical_bias="0"></androidx.appcompat.widget.AppCompatButton>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/join_btn_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintLeft_toLeftOf="parent"
                    bind:layout_constraintRight_toRightOf="parent"
                    bind:layout_constraintTop_toBottomOf="@+id/go_access_terms_btn"
                    bind:layout_constraintVertical_bias="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/join_btn"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/input_box_background"
                        android:backgroundTint="@color/app_basic_color"
                        android:gravity="center"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintDimensionRatio="620:96"
                        bind:layout_constraintLeft_toLeftOf="parent"
                        bind:layout_constraintRight_toRightOf="parent"
                        bind:layout_constraintTop_toTopOf="parent"
                        bind:layout_constraintWidth_percent="0.8">


                        <TextView
                            android:id="@+id/order_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="가입하기"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            bind:layout_constraintBottom_toBottomOf="parent"
                            bind:layout_constraintLeft_toLeftOf="parent"
                            bind:layout_constraintRight_toRightOf="parent"
                            bind:layout_constraintTop_toTopOf="parent"></TextView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    bind:layout_constraintBottom_toBottomOf="@+id/go_access_terms_btn"
                    bind:layout_constraintHorizontal_bias="0"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@id/right_line"
                    bind:layout_constraintTop_toTopOf="@+id/go_access_terms_btn"
                    bind:layout_constraintVertical_bias="0">

                    <RadioButton
                        android:id="@+id/access_term_agree_btn"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/radio_btn_selector"
                        android:button="@null"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintDimensionRatio="1:1"
                        bind:layout_constraintHorizontal_bias="0"
                        bind:layout_constraintLeft_toLeftOf="parent"
                        bind:layout_constraintRight_toRightOf="parent"
                        bind:layout_constraintTop_toTopOf="parent"></RadioButton>

                    <TextView
                        android:id="@+id/access_term_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="개인정보처리방침"
                        android:textColor="#797979"
                        android:textSize="13dp"
                        bind:layout_constraintBottom_toBottomOf="parent"
                        bind:layout_constraintLeft_toRightOf="@+id/access_term_agree_btn"
                        bind:layout_constraintTop_toTopOf="parent"></TextView>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/go_access_terms_btn"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/go_access_terms_btn"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    bind:layout_constraintBottom_toBottomOf="parent"
                    bind:layout_constraintDimensionRatio="1:1"
                    bind:layout_constraintHorizontal_bias="0.96"
                    bind:layout_constraintLeft_toLeftOf="@+id/left_line"
                    bind:layout_constraintRight_toRightOf="@+id/right_line"
                    bind:layout_constraintTop_toBottomOf="@+id/recommender_code_input_box"
                    bind:layout_constraintVertical_bias="0.03"
                    bind:layout_constraintWidth_percent="0.035"></androidx.appcompat.widget.AppCompatButton>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>