<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_round_shape_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        >



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.08"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"></androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.92"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"></androidx.constraintlayout.widget.Guideline>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.15"
            android:background="@drawable/saved_point_dialog_icon"
            app:layout_constraintLeft_toLeftOf="@id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"></ImageView>
        <TextView
            android:id="@+id/order_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="축하합니다."
            android:textSize="18dp"
            android:textColor="#343434"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.4"></TextView>

        <TextView
            android:id="@+id/point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70P 적립되었습니다."
            android:textSize="18dp"
            android:textColor="#343434"
            app:layout_constraintTop_toBottomOf="@+id/order_cancel_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.05"></TextView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="확인"
            android:textColor="@color/white"
            android:fontFamily="@font/nskr_medium"
            android:includeFontPadding="false"
            android:textSize="17dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/stroke_round_corner_btn"
            android:backgroundTint="@color/app_basic_color"
            app:layout_constraintVertical_bias="0.75"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintTop_toBottomOf="@+id/order_cancel_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_left"
            app:layout_constraintRight_toRightOf="@id/guideline_right"></androidx.appcompat.widget.AppCompatButton>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/waiting_msg"
            android:background="@drawable/dialog_round_shape_background"
            android:backgroundTint="#64000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:enabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="잠시만 기다려주세요 .."
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="30dp"
                android:fontFamily="@font/nskr_medium"></TextView>
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>